<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grey"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/my_menu_selector"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="90dp"
                app:srcCompat="@drawable/logo_penk_black" />

            <Button
                android:id="@+id/imageButton2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/my_profile_selector"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:isScrollContainer="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:background="@color/Grey"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/set1" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:background="@color/Grey"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/set2" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:background="@color/Grey"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/set3" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:background="@color/Grey"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/set4" />

                    </LinearLayout>

                </HorizontalScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="SpeakableTextPresentCheck">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/featured1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/featured_ear_selector"
                            android:scaleType="fitCenter"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:id="@+id/featured2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="150dp"
                            android:background="@drawable/featured_headset_selector"
                            android:scaleType="fitCenter"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:id="@+id/featured3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="300dp"
                            android:background="@drawable/featured_keyboard_selector"
                            android:scaleType="fitCenter"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:id="@+id/featured4"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="450dp"
                            android:background="@drawable/featured_microphone_selector"
                            android:scaleType="fitCenter" />

                        <Button
                            android:id="@+id/featured5"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="600dp"
                            android:background="@drawable/featured_mouse_selector"
                            android:scaleType="fitCenter" />

                        <Button
                            android:id="@+id/featured6"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="750dp"
                            android:background="@drawable/featured_mpad_selector"
                            android:scaleType="fitCenter" />

                        <Button
                            android:id="@+id/featured7"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="900dp"
                            android:background="@drawable/featured_stand_selector"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/featured1"
                            android:fontFamily="@font/allan"
                            android:text="EARPHONES"
                            android:textAlignment="center"
                            android:textColor="@color/LightPink"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150dp"
                            android:layout_below="@id/featured2"
                            android:fontFamily="@font/allan"
                            android:text="HEADPHONES"
                            android:textAlignment="center"
                            android:textColor="@color/LightPink"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="300dp"
                            android:layout_below="@id/featured3"
                            android:fontFamily="@font/allan"
                            android:text="KEYBOARD"
                            android:textAlignment="center"
                            android:textColor="@color/LightPink"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="450dp"
                            android:layout_below="@id/featured4"
                            android:fontFamily="@font/allan"
                            android:text="MICROPHONES"
                            android:textAlignment="center"
                            android:textColor="@color/LightPink"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="600dp"
                            android:layout_below="@id/featured5"
                            android:fontFamily="@font/allan"
                            android:text="MOUSE"
                            android:textAlignment="center"
                            android:textColor="@color/LightPink"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="750dp"
                            android:layout_below="@id/featured6"
                            android:fontFamily="@font/allan"
                            android:text="MOUSE-PAD"
                            android:textAlignment="center"
                            android:textColor="@color/LightPink"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="900dp"
                            android:layout_below="@id/featured7"
                            android:fontFamily="@font/allan"
                            android:text="STAND"
                            android:textAlignment="center"
                            android:textColor="@color/LightPink"
                            android:textSize="20sp" />

                    </RelativeLayout>

                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>